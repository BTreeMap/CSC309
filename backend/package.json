{
  "name": "cssu-rewards",
  "version": "0.0.1",
  "description": "CSSU Reward System",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js 3000",
    "setup-db": "node scripts/setup-db.js",
    "prisma": "prisma",
    "db:migrate": "npm exec --no -- prisma migrate dev",
    "db:migrate:deploy": "npm exec --no -- prisma migrate deploy",
    "db:push": "npm exec --no -- prisma db push",
    "db:generate": "npm exec --no -- prisma generate",
    "createsuperuser": "node prisma/createsu.js",
    "seed": "node prisma/seed.js",
    "clean": "rm -rf prisma/dev.db* node_modules package-lock.json prisma/migrations/",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --runInBand --watch",
    "test:coverage": "jest --runInBand --forceExit --coverage"
  },
  "author": "CSC309 Student, Fall 2025",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "setupFilesAfterEnv": [],
    "collectCoverageFrom": [
      "index.js",
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  }
}