# Backend Environment Variables
# Copy this file to .env and update the values

# JWT secret for authentication tokens (use a strong random string in production)
JWT_SECRET=your-secure-jwt-secret-here

# Environment type: local, development, production
ENV_TYPE=local

# Frontend URL for CORS (Access-Control-Allow-Origin header)
# For local development: http://localhost:5173 (Vite default)
# For production: https://your-app.pages.dev
FRONTEND_URL=http://localhost:5173

# Database URL (SQLite)
DATABASE_URL=file:./dev.db
